<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%= @post.created_at.strftime('%A, %B %d') %></p>
    <h1><%= @post.title %></h1>
    <hr>
  </header>

  <div id="content">
    <%= markdown @post.content %>
  </div>
  
  <hr>

  <div id="share_box">
    <p>Share "<%= @post.title %>"</p>
    <!-- Twitter -->
    <a onclick="javascrpt:window.open('http://twitter.com/share?text=<%= @post.title %> by @strongshape - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
    <!-- Facebook -->
    <a onclick="javascrpt:window.open('http://facebook.com/sharer.php?u=<%= url_for([@post,{only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>
    <!-- Google+ -->
    <a onclick="javascrpt:window.open('https://plus.google.com/share?url=<%= url_for([@post,{only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-google-plus"></i></a>
  </div>
  <hr>

  <%= render 'disqus' %>

</div>

<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post), method: :delete, date: { confirm: "Are you sure you want to delete this post?"} %>