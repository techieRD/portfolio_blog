<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <<h2><%= pularlized(@post.errors.count, "error") %>prevented this from saving</h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
  <% end %>

  <%= f.label :title %><br>
  <%= f.text_field :title %>

  <br>
  <br>
  
  <%= f.label :content, "Write your article here" %><br>
  <%= f.text_area :content, rows: 10 %>

  <br>
  <br>

  <%= f.submit %>


  <% end %>